{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "kunaal/chart",
    "version": "2.0.0",
    "title": "Chart",
    "category": "kunaal-data",
    "icon": "chart-bar",
    "description": "Create professional data visualizations with multiple chart types.",
    "keywords": ["chart", "graph", "bar", "line", "pie", "data", "visualization", "stacked", "waterfall", "donut"],
    "textdomain": "kunaal-theme",
    "attributes": {
        "chartType": {
            "type": "string",
            "default": "bar"
        },
        "orientation": {
            "type": "string",
            "default": "vertical"
        },
        "barMode": {
            "type": "string",
            "default": "simple"
        },
        "title": {
            "type": "string",
            "default": ""
        },
        "data": {
            "type": "string",
            "default": ""
        },
        "data2": {
            "type": "string",
            "default": ""
        },
        "data3": {
            "type": "string",
            "default": ""
        },
        "labels": {
            "type": "string",
            "default": ""
        },
        "seriesLabels": {
            "type": "string",
            "default": ""
        },
        "source": {
            "type": "string",
            "default": ""
        },
        "caption": {
            "type": "string",
            "default": ""
        },
        "showLegend": {
            "type": "boolean",
            "default": true
        },
        "showValues": {
            "type": "boolean",
            "default": true
        },
        "showGrid": {
            "type": "boolean",
            "default": true
        },
        "colors": {
            "type": "string",
            "default": "theme"
        },
        "startValue": {
            "type": "number",
            "default": 0
        },
        "unit": {
            "type": "string",
            "default": ""
        },
        "unitPosition": {
            "type": "string",
            "default": "suffix"
        }
    },
    "supports": {
        "html": false,
        "anchor": true,
        "className": true
    },
    "editorScript": "kunaal-chart-editor",
    "render": "file:./render.php",
    "style": "file:./style.css"
}
