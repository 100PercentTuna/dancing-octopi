{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "kunaal/sidenote",
    "version": "2.0.0",
    "title": "Sidenote",
    "category": "kunaal-editorial",
    "icon": "editor-textcolor",
    "description": "A margin note that appears to the right of the text, like a handwritten annotation.",
    "keywords": ["sidenote", "margin", "note", "annotation", "tufte"],
    "textdomain": "kunaal-theme",
    "attributes": {
        "content": {
            "type": "string",
            "default": ""
        }
    },
    "supports": {
        "html": false,
        "anchor": true,
        "className": true
    },
    "editorScript": "kunaal-sidenote-editor",
    "viewScript": "kunaal-sidenote-view",
    "render": "file:./render.php",
    "style": "file:./style.css"
}
