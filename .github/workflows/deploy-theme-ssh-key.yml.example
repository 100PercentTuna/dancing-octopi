name: Deploy WordPress Theme (SSH Key Auth)

# Alternative deployment workflow using SSH key authentication
# Rename this file to deploy-theme-ssh-key.yml and use if password auth fails

on:
  push:
    branches:
      - main
    paths:
      - 'kunaal-theme/**'

jobs:
  deploy:
    name: Deploy to WordPress (SSH Key)
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
        with:
          fetch-depth: 2
      
      - name: Check if theme files changed
        id: changed
        run: |
          if git diff --name-only HEAD^ HEAD | grep -q '^kunaal-theme/'; then
            echo "changed=true" >> $GITHUB_OUTPUT
          else
            echo "changed=false" >> $GITHUB_OUTPUT
          fi
      
      - name: Setup SSH key
        if: steps.changed.outputs.changed == 'true'
        run: |
          mkdir -p ~/.ssh
          echo "${{ secrets.SSH_PRIVATE_KEY }}" > ~/.ssh/id_rsa
          chmod 600 ~/.ssh/id_rsa
          ssh-keyscan -H ${{ secrets.FTP_SERVER }} >> ~/.ssh/known_hosts
      
      - name: Deploy via rsync over SSH
        if: steps.changed.outputs.changed == 'true'
        run: |
          rsync -avz --delete \
            --exclude='.git*' \
            --exclude='.DS_Store' \
            --exclude='node_modules' \
            --exclude='vendor' \
            --exclude='*.md' \
            --exclude='.cursor' \
            --exclude='.vscode' \
            ./kunaal-theme/ \
            ${{ secrets.FTP_USERNAME }}@${{ secrets.FTP_SERVER }}:${{ secrets.FTP_REMOTE_PATH || '/html/wp-content/themes/kunaal-theme/' }}
      
      - name: Trigger cache clear (optional)
        if: steps.changed.outputs.changed == 'true'
        run: |
          curl -X POST "${{ secrets.CACHE_CLEAR_URL }}" || true

